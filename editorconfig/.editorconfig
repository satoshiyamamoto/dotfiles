# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]

# Change these settings to your own preference
indent_style = space
indent_size = 2

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_size = 4

# Go: standard style
[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

# Docker
[Dockerfile]
indent_size = 4

# Java - Google Java Format
[*.java]
indent_style = space
indent_size = 2
continuation_indent_size = 4
max_line_length = 100

# TypeScript/JavaScript/React
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 80

# Python - PEP 8
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# PHP - PSR-12
[*.php]
indent_style = space
indent_size = 4

# Rust - standard style
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# YAML
[*.{sls,yaml,yml}]
indent_style = space
indent_size = 2
