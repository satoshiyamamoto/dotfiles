# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]

# Change these settings to your own preference
indent_style = space
indent_size = 2

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_size = 4

# Go: standard style
[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

# Docker
[Dockerfile]
indent_size = 4

# Java
[*.java]
indent_style = space
indent_size = 2
continuation_indent_size = 4
max_line_length = 100

# TypeScript
[*.ts]
indent_style = space
indent_size = 4
max_line_length = 80

# Python: PEP8 defines 4 spaces for indentation
[*.py]
indent_style = space
indent_size = 4
max_line_length = 80

# PHP
[*.php]
indent_style = space
indent_size = 4

# Rust
[*.rs]
indent_style = space
indent_size = 4

# Salt state files, YAML format, 2 spaces
[*.sls, *.yaml, *.yml]
indent_style = space
indent_size = 2
